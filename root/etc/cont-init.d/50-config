#!/bin/bash

mkdir -p /data

## Bump php upload max filesize and post max size to 100MB by default
grep -qxF 'upload_max_filesize' /config/php/php-local.ini || echo 'upload_max_filesize = 200MB' >> /config/php/php-local.ini
grep -qxF 'post_max_size' /config/php/php-local.ini || echo 'post_max_size = 200MB' >> /config/php/php-local.ini

touch /config/settings.php
ln -sf /config/settings.php /app/chevereto/app/settings.php

[[ ! -e "/data/images" ]] &&
    mv /app/chevereto/images /data

rm -rf /app/chevereto/images
ln -sf /data/images /app/chevereto/images

chown -R abc:abc \
    /app/chevereto \
    /config \
    /data
